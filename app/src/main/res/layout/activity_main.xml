<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/butterfly_act"
    tools:context="com.databyte.indra.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/responseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        />


    <RadioGroup
        android:id="@+id/radiogrpID"
        android:weightSum="1"
        android:visibility="gone"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/RadioBtnUser1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:padding="5dp"
            android:text="Speaker 1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>

        <RadioButton
            android:id="@+id/RadioBtnUser2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_weight="0.5"
            android:text="Speaker 2" />

    </RadioGroup>



    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/background"
        android:textSize="18sp"
        android:maxWidth="250dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:text="Hello!"
        android:textColor="@android:color/white"/>


    <LinearLayout

        android:gravity="center"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_marginTop="250dp"
        android:layout_width="match_parent"
        android:id="@+id/animationContainer"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/anim1"
            android:layout_width="10dp"
            android:layout_height="58dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_circle"
            android:backgroundTint="@android:color/holo_red_dark" />

        <ImageView
            android:id="@+id/anim2"
            android:layout_width="10dp"
            android:layout_height="57dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_circle"
            android:backgroundTint="@android:color/holo_blue_dark" />

        <ImageView
            android:id="@+id/anim3"
            android:layout_width="10dp"
            android:layout_height="58dp"
            android:layout_margin="10dp"
            android:background="@drawable/background_circle"
            android:backgroundTint="@android:color/holo_orange_dark" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rel_layout"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">

            <Button
                android:id="@+id/ttsButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:text="Listen"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/sendBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="100dp"
                android:background="@drawable/rounded_button"
                android:text="Send"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
